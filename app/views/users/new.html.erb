<h1>Signup</h1>

<%= bootstrap_form_for :user do |u| %>
  <%= u.text_field :name, placeholder: "Enter your name" %>
  <%= u.email_field :email, placeholder: "Enter your email" %>
  <%= u.password_field :password, placeholder: "Enter your password" %>
  <%= u.password_field :password_confirmation, placeholder: "Re-enter your password" %>

  <%= u.primary 'Signup' %>
<% end %>
